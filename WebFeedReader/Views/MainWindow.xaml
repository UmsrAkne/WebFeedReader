<Window
    x:Class="WebFeedReader.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:WebFeedReader.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="400"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StatusBar
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3" />

        <TreeView
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="LemonChiffon" />

        <GridSplitter
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="8"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Background="Aqua" />

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" Background="LightSalmon" />

            <Border Grid.Row="1" Background="BurlyWood" />
        </Grid>

        <StatusBar
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3" />
    </Grid>

</Window>