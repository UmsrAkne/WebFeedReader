<Window
    x:Class="WebFeedReader.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WebFeedReader.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:WebFeedReader.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="400"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="White"
    mc:Ignorable="d">

    <Window.Resources>
        <SolidColorBrush x:Key="LightBorderBrush" Color="LightSlateGray" />
        <system:Double x:Key="CommonFontSize">15</system:Double>
    </Window.Resources>

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StatusBar
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="White" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="3"
            BorderBrush="{StaticResource LightBorderBrush}"
            BorderThickness="1"
            CornerRadius="5">

            <ListBox
                BorderThickness="0"
                ItemsSource="{Binding FeedSourceListViewModel.Items}"
                SelectedItem="{Binding FeedSourceListViewModel.SelectedItem}">

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:FeedSource}">
                        <DataTemplate.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
                            </Style>
                        </DataTemplate.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}" />
                        <Setter Property="BorderThickness" Value="0,0.5,0,0.5" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Width="8"
            Background="LightGray"
            CornerRadius="3" />

        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="8"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Background="Transparent" />

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>

            <Border
                Margin="5"
                Padding="3"
                BorderBrush="{StaticResource LightBorderBrush}"
                BorderThickness="0.5"
                CornerRadius="5">
                <ListBox
                    HorizontalContentAlignment="Stretch"
                    BorderThickness="0"
                    ItemsSource="{Binding FeedListViewModel.Items}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding FeedListViewModel.SelectedItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:FeedItem}">
                            <DataTemplate.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="{StaticResource CommonFontSize}" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataTemplate.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Width="20"
                                    Foreground="LightGray"
                                    Text="★" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />
                                <TextBlock
                                    Grid.Column="2"
                                    Width="120"
                                    Text="{Binding Published, StringFormat=yyyy/MM/dd HH:mm}"
                                    TextAlignment="Right" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}" />
                            <Setter Property="BorderThickness" Value="0,0.5,0,0.5" />
                            <Setter Property="Padding" Value="5" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <Border
                Grid.Row="1"
                Margin="5"
                BorderBrush="{StaticResource LightBorderBrush}"
                BorderThickness="1"
                CornerRadius="5">
                <TextBlock
                    Padding="3"
                    Text="{Binding FeedListViewModel.SelectedItem.Summary}"
                    TextWrapping="Wrap" />
            </Border>
        </Grid>

        <StatusBar
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="White" />
    </Grid>

</Window>