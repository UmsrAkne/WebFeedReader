<UserControl
    x:Class="WebFeedReader.Views.NgListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WebFeedReader.Models"
    xmlns:viewModels="clr-namespace:WebFeedReader.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:NgListPageViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" ItemsSource="{Binding NgWords}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:NgWord}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1">
            <DockPanel Margin="0,10" HorizontalAlignment="Right">

                <CheckBox
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Command="{Binding LoadNgWordsCommand}"
                    Content="Mask words"
                    IsChecked="{Binding IsMaskEnabled}" />

                <Button
                    Width="250"
                    Padding="2"
                    HorizontalAlignment="Right"
                    Command="{Binding LoadNgWordsCommand}"
                    Content="Show ng words" />
            </DockPanel>

            <Border
                Height="1"
                Margin="0,5"
                Background="Gray" />

            <DockPanel Margin="0,10">
                <TextBlock Text="New NgWord :" />
                <TextBox Margin="5,0" Text="{Binding PendingNgWord, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>

            <Button
                Width="200"
                Padding="2"
                HorizontalAlignment="Right"
                Command="{Binding AddNgWordCommand}"
                Content="Add Ng word" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ng word count: " />
                <TextBlock Text="{Binding NgWordCount}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>